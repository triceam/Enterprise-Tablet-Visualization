<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
				 xmlns:s="library://ns.adobe.com/flex/spark" xmlns:components="spark.components.*" title="VehicleSummaryView">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<s:Label text="Vehicle:		{ data.name }" />
	<s:Label text="Latitude: 	{ data.latitude }" />
	<s:Label text="Longitude: 	{ data.longitude }" />
	<s:Label text="Direction: 	{ data.direction }" />
	<s:Label text="Speed: 		{ data.speed }" />
	
	<s:layout>
		<s:VerticalLayout paddingBottom="10" paddingLeft="10" paddingRight="10" paddingTop="10" gap="10" />
	</s:layout>
</s:View>
